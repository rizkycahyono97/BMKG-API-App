{% extends "partials/template.twig" %}

{% block content %}
<div class="container">
    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    {% if weather %}
        <h2>Informasi Cuaca</h2>
        <p><strong>Kota:</strong> {{ city }}</p>
        <p><strong>Suhu:</strong> {{ weather.data[0].cuaca[0][0].t }} Â°C</p>
        <p><strong>Kelembapan Udara:</strong> {{ weather.data[0].cuaca[0][0].hu }}</p>
        <p><strong>Cuaca:</strong> {{ weather.data[0].cuaca[0][0].weather_desc }}</p>
        <p><strong>Kecepatan Angin:</strong> {{ weather.data[0].cuaca[0][0].ws }}</p>
        <p><strong>Arah Mata Angin:</strong> {{ weather.data[0].cuaca[0][0].wd }}</p>
        <p><strong>Awan:</strong> {{ weather.data[0].cuaca[0][0].tcc }}%</p>
        <p><strong>Perkiraan Waktu:</strong> {{ weather.data[0].cuaca[0][0].datetime }} WIB</p>
        <!-- Tambahkan data lainnya -->
    {% else %}
        <p>Data cuaca tidak tersedia.</p>
    {% endif %}
</div>

